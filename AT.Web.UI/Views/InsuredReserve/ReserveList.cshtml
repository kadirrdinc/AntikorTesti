@model AT.Web.UI.ViewModel.UserViewModel
@{
    ViewData["Title"] = "Index";
}
<div style="margin-top:30px;">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            REZERVASYON LİSTESİ
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-sm" id="tblDataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>AD SOYAD</th>
                            <th>TC NO</th>
                            <th>POLİÇE NO</th>
                            <th>İL</th>
                            <th>İLÇE</th>
                            <th>İŞLEM TARİHİ</th>
                            <th>İSTENİLEN REZ. TARİHİ</th>
                            <th>ONAYLANAN REZ. TARİHİ</th>
                            <th>DURUM</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var insured in Model.InsuredUsers)
                        {
                            <tr>
                                <td>@string.Format("{0} {1}", insured.FirstName, insured.LastName)</td>
                                <td>@insured.IdentityNo</td>
                                <td>@insured.PolicyNo</td>
                                <td>@insured.City.Name</td>
                                <td>@insured.District.Name</td>
                                <td>@insured.CreatedDate.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@insured.RezervDate.ToString("dd/MM/yyyy")</td>
                                <td>@insured.ConfirmRezervDate.Value.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (insured.IsConfirm)
                                            @Html.Raw("<b>ONAYLANMIŞ</b> <i style='color:red' class='fas fa-check'></i>")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
